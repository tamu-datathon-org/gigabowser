
<div class="section events-section">
    <div id="event" class="container">
      <div class="row">
        <div class="col-md">
          <h1 class="section-title event-title">
            Events
          </h1>
        </div>
      </div>
      <div class="row">
        <div id="eventCarousel" class="event-slides">
          <!-- Wrapper for slides -->
          <div class="event-slide-inner">
            <% req.EVENTS.forEach(({ name, description, img }, index) => { %>
              <% if (index == 0) { %>
                <div class="col-md">
                  <div class="slide-item active">
                    <div class="carousel-caption">
                      <h3><%- name %></h3>
                      <p><%- description %></p>
                    </div>
                    <img class="d-block" src="/static/img/graphics/<%- img %>" alt="'<% name %>'">
                  </div>
                </div>
              <% } else { %>
                <div class="col-md">
                  <div class="slide-item">
                    <div class="carousel-caption">
                      <h3><%- name %></h3>
                      <p><%- description %></p>
                    </div>
                    <img src="/static/img/graphics/<%- img %>" alt="'<% name %>'">
                  </div>
                </div>
              <% } %>
            <% }) %>
          </div>
          <!-- Indicators -->
          <ol class="indicators">
            <li class="indicator active"></li>
            <% for (var i = 1; i < req.EVENTS.length; i++) { %>
              <li  class="indicator"></li>
            <% } %>
          </ol>
          <!-- Left and right controls -->
          <a class="left slide-control" role="button" data-slide="prev">
            <span class=""></span>
            <span class="">Previous</span>
          </a>
          <a class="right slide-control" role="button" data-slide="next">
            <span class=""></span>
            <span class="">Next</span>
          </a>
        </div>
      </div>
    </div>
</div>
