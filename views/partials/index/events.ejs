<div class="section events-section">
  <div id="event" class="container">
    <!-- events section title -->
    <div class="row">
      <div class="col-md">
        <h1 class="section-title event-title">
          Upcoming Events
        </h1>
      </div>
    </div>
    <!-- carousel -->
      <div id="eventCarousel" class="carousel slide" data-ride="carousel"  data-interval="9000">
        <!-- indicators -->
        <ul class="carousel-indicators">
          <li data-target="#eventCarousel" data-slide-to="0" class="active" aria-current="true" aria-label="Slide 0"></a>
          <% for (var i = 1; i < req.EVENTS.length; i++) { %>
            <li data-target="#eventCarousel" data-slide-to="<%- i %>" aria-label="<%- i %>"></a>
          <% } %>
        </ul>
        <div class="carousel-inner">
          <!--<div id="tv-blip" class="tv-blip mx-auto overlay">
            <div id="tv-screen" class="tv-screen"></div>
          </div>-->
          <% req.EVENTS.forEach(({ name, img }, index) => { %>
            <div class="carousel-item <%= index == 0 ? 'active' : '' %>">
              <img class="img-fluid mx-auto d-block justify-content-center" src="/static/img/graphics/<%- img %>" alt="<%= name %>" onmouseover="flash(true)">
              <div class="carousel-caption d-block">
                <p><%- name %></p>
                <a href="<%- req.navbarSamePageItems[1].href %>">
                  Go to Events Page
                  <i class="fa fa-external-link"></i>
                </a>
              </div>
            </div>
          <% }) %>
        </div>
        <!-- buttons -->
        <a class="carousel-control-prev" href="#eventCarousel" role="button" data-slide="prev">
          <i class="fa fa-chevron-left fa-lg"></i>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#eventCarousel" role="button" data-slide="next">
          <i class="fa fa-chevron-right fa-lg"></i>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <% req.EVENTS.forEach(({ name, description, date }, index) => { %>
        <div id="event-info-<%- index %>" class="event-info" style="display: <%= index == 0 ? 'block' : 'none' %>">
          <h4 class="event-title"><%- name %></h4>
          <p><%- description %></p>
          <span><%- date %></span>
        </div> 
      <% }) %> 
  </div>
</div>
