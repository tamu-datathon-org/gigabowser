
<div class="section events-section">
    <div id="event" class="container">
      <div class="row">
        <div class="col-md">
          <h1 class="section-title event-title">
            Events
          </h1>
        </div>
      </div>
      <div class="row">
        <div id="eventCarousel" class="event-slides">
          <!-- Indicators -->
          <ol class="indicators">
            <li class="indicator active"></li>
            <% for (var i = 1; i < req.EVENTS.length; i++) { %>
              <li  class="indicator"></li>
            <% } %>
          </ol>
          <!-- Wrapper for slides -->
          <div class="carousel-inner">
            <% req.EVENTS.forEach(({ name, description, img }, index) => { %>
              <% if (index == 0) { %>
                <div class="carousel-item active">
                  <div class="carousel-caption">
                    <h3><%- name %></h3>
                    <p><%- description %></p>
                  </div>
                  <img class="d-block" src="/static/img/graphics/<%- img %>" alt="'<% name %>'">
                </div>
              <% } else { %>
                <div class="carousel-item">
                  <div class="carousel-caption">
                    <h3><%- name %></h3>
                    <p><%- description %></p>
                  </div>
                  <img src="/static/img/graphics/<%- img %>" alt="'<% name %>'">
                </div>
              <% } %>
            <% }) %>
          </div>
          <!-- Left and right controls -->
          <a class="left carousel-control" href="#eventCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#eventCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
</div>
