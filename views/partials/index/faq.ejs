<div class="section faq-section">
  <!-- start faq section (2 column) -->
  <div id="faq" class="container">
    <div class="row">
      <div class="col-md">
        <h1 class="section-title faq-title">
          FAQs
        </h1>
      </div>
    </div>
    <div class="row">
      <!-- (LHS) left hand side -->
      <div class="col-md">
        <% req.FAQ.LHS.forEach(({ q, a }, index) => { %>
        <div class="question-block">
          <h4 class="question">
            <%= q %>
          </h4>
          <!-- DANGEROUS: evaluate the HTML value from the object -->
          <span class="answer">
            <%- a %>
          </span>
        </div>
        <!-- hr separator (except on last item) -->
        <% if (index < req.FAQ.LHS.length - 1) { %>
        <hr align="left" />
        <% } %>
        <% }) %>
      </div>
      <!-- hide a divider on screens > than md -->
      <div class="col-md d-md-none">
        <hr class="d-md-none" align="left" />
      </div>
      <!-- RHS (right hand side) -->
      <div class="col-md">
        <% req.FAQ.RHS.forEach(({ q, a }, index) => { %>
        <div class="question-block">
          <h4 class="question">
            <%= q %>
          </h4>
          <!-- DANGEROUS: evaluate the HTML value from the object -->
          <span class="answer">
            <%- a %>
          </span>
        </div>
        <!-- hr separator (except on last item) -->
        <% if (index < req.FAQ.RHS.length - 1) { %>
        <hr align="left" />
        <% } %>
        <% }) %>
      </div>
    </div>
  </div>
</div>